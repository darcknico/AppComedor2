<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.aldebaran.appcomedor.verTicket"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="25dp">

    <include
        android:id="@+id/toolbar_verTicket"
        layout="@layout/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintTop_creator="1" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <GridLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:columnCount="2"
                android:orientation="horizontal"
                android:rowCount="4"
                tools:context=".GridXMLActivity">

                <TextView
                    android:id="@+id/textView14"
                    style="@style/Base.TextAppearance.AppCompat.Medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:paddingBottom="20dp"
                    android:paddingTop="20dp"
                    android:text="Fecha: "
                    android:textStyle="bold"
                    app:layout_constraintBottom_toTopOf="@+id/textView15"
                    app:layout_constraintRight_toRightOf="@+id/textView15"
                    tools:layout_constraintBottom_creator="1"
                    tools:layout_constraintRight_creator="1" />

                <TextView
                    android:id="@+id/txt_fecha_verticket"
                    style="@style/Base.TextAppearance.AppCompat.Medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="20dp"
                    android:paddingTop="20dp"
                    android:text="1999-12-12"
                    app:layout_constraintBaseline_toBaselineOf="@+id/textView14"
                    app:layout_constraintLeft_toRightOf="@+id/textView14"
                    app:layout_gravity="left"
                    tools:layout_constraintBaseline_creator="1"
                    tools:layout_constraintLeft_creator="1" />

                <TextView
                    android:id="@+id/textView15"
                    style="@style/Base.TextAppearance.AppCompat.Medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:paddingBottom="20dp"
                    android:paddingTop="20dp"
                    android:text="Descripción: "
                    android:textStyle="bold"
                    app:layout_constraintRight_toLeftOf="@+id/txt_descripcion_verticket"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:layout_constraintRight_creator="1"
                    tools:layout_constraintTop_creator="1" />

                <TextView
                    android:id="@+id/txt_descripcion_verticket"
                    style="@style/Base.TextAppearance.AppCompat.Small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="20dp"
                    android:paddingTop="20dp"
                    android:text="Esto es una descripcion"
                    app:layout_constraintBaseline_toBaselineOf="@+id/textView15"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_gravity="left"
                    tools:layout_constraintBaseline_creator="1"
                    tools:layout_constraintRight_creator="1" />

                <TextView
                    android:id="@+id/textView18"
                    style="@style/Base.TextAppearance.AppCompat.Medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:paddingBottom="20dp"
                    android:paddingTop="20dp"
                    android:text="Estado: "
                    android:textStyle="bold"
                    app:layout_constraintRight_toRightOf="@+id/textView15"
                    app:layout_constraintTop_toBottomOf="@+id/textView15"
                    tools:layout_constraintRight_creator="1"
                    tools:layout_constraintTop_creator="1" />

                <TextView
                    android:id="@+id/txt_estado_verticket"
                    style="@style/Base.TextAppearance.AppCompat.Medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="20dp"
                    android:paddingTop="20dp"
                    android:text="estado"
                    app:layout_constraintBaseline_toBaselineOf="@+id/textView18"
                    app:layout_constraintLeft_toRightOf="@+id/textView18"
                    app:layout_constraintRight_toRightOf="@+id/txt_fecha_verticket"
                    app:layout_gravity="left"
                    tools:layout_constraintBaseline_creator="1"
                    tools:layout_constraintLeft_creator="1"
                    tools:layout_constraintRight_creator="1" />

                <TextView
                    android:id="@+id/textView19"
                    style="@style/Base.TextAppearance.AppCompat.Small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:paddingBottom="20dp"
                    android:paddingTop="20dp"
                    android:text="Código: "
                    android:textStyle="bold"
                    app:layout_constraintRight_toRightOf="@+id/txt_codigo_verticket"
                    app:layout_constraintTop_toBottomOf="@+id/txt_estado_verticket"
                    tools:layout_constraintRight_creator="1"
                    tools:layout_constraintTop_creator="1" />

                <TextView
                    android:id="@+id/txt_codigo_verticket"
                    style="@style/Base.TextAppearance.AppCompat.Small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="20dp"
                    android:paddingTop="20dp"
                    android:text='123123123'
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView19"
                    app:layout_gravity="left"
                    tools:layout_constraintLeft_creator="1"
                    tools:layout_constraintRight_creator="1"
                    tools:layout_constraintTop_creator="1" />

            </GridLayout>

            <ImageView
                android:id="@+id/img_codigo_verticket"
                android:layout_width="match_parent"
                android:layout_height="107dp"
                android:layout_gravity="center"
                android:background="@drawable/borde_imagen_negro"
                android:scaleType="fitXY"
                android:src="@mipmap/ic_launcher"
                app:layout_constraintBottom_toBottomOf="@+id/btn_cancelar_verticket"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView19"
                tools:layout_constraintBottom_creator="1"
                tools:layout_constraintLeft_creator="1"
                tools:layout_constraintRight_creator="1"
                tools:layout_constraintTop_creator="1" />

            <Button
                android:id="@+id/btn_cancelar_verticket"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="CANCELAR TICKET"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                tools:layout_constraintBottom_creator="1"
                tools:layout_constraintLeft_creator="1"
                tools:layout_constraintRight_creator="1" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>
